local player = player or game.Players.LocalPlayer
local tool = Instance.new("Tool", player:WaitForChild("Backpack"))
tool.Name = "Universe slap"
tool.ToolTip = ""
tool.RequiresHandle = false

local lastPressTime = 0
tool.Activated:Connect(function()
  local currentTime = tick()
            if currentTime - lastPressTime >= 10 then
                lastPressTime = currentTime 
local Anim, owner = Instance.new("Animation"), tool.Parent
Anim.AnimationId = "rbxassetid://243827693"
local k = owner.Humanoid:LoadAnimation(Anim)
k:Play()
k:AdjustSpeed(0)
  task.wait(4)
k:AdjustSpeed(2)

local explosion = Instance.new("Part", workspace)
explosion.CanCollide = false
explosion.CanQuery = false
explosion.CanTouch = false
explosion.Shape = "Ball"
explosion.Anchored = true
explosion.Size = Vector3.new(1, 1, 1)
explosion.Material = "Neon"
explosion.Position = owner:FindFirstChild("Right Arm").Position or owner:FindFirstChild("HumanoidRootPart").Position
explosion.Color = Color3.new(0, 0, 0)
game.Debris:AddItem(explosion, 10)

local explso = Instance.new("Sound", explosion)
explso.SoundId = "rbxassetid://89787808581737"
explso.Volume = 1.25
explso:Play()

local shock = Instance.new("Part", explosion)
shock.Anchored = true
shock.CanCollide = false
shock.CanTouch = false
shock.Position = explosion.Position
shock.Color = Color3.new(0, 0, 0)

explosion:GetPropertyChangedSignal("Transparency"):Connect(function()
  shock.Transparency = explosion.Transparency
end)

local shockmesh = Instance.new("SpecialMesh", shock)
shockmesh.MeshId = "rbxassetid://73432515253008"
shockmesh.Scale = Vector3.new(1, 1, 1)

game:GetService("TweenService"):Create(shockmesh, TweenInfo.new(3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out, 0, false, 0), {
   Scale = Vector3.new(300, 3, 300)
}):Play()

for _, side in next, Enum.NormalId:GetEnumItems() do
  local textur = Instance.new("Decal", explosion)
  textur.Texture = "https://www.roblox.com/asset-thumbnail/image?assetId=82384142&width=432&height=432&format=png"
  textur.Face = side
  explosion:GetPropertyChangedSignal("Transparency"):Connect(function()
    textur.Transparency = explosion.Transparency
  end)
end

game:GetService("TweenService"):Create(explosion, TweenInfo.new(3, Enum.EasingStyle.Exponential, Enum.EasingDirection.Out, 0, false, 0), {
     Size = Vector3.new(150, 150, 150),
     Transparency = 1
}):Play()

local humanoids = {}
for _, part in next, workspace:GetPartBoundsInRadius(owner.HumanoidRootPart.Position, 250) do
    if part.Parent:IsA("Model") and part.Parent:FindFirstChildOfClass("Humanoid") and not part:IsDescendantOf(owner) then
      if not table.find(humanoids, part.Parent:FindFirstChildOfClass("Humanoid")) then
        table.insert(humanoids, part.Parent:FindFirstChildOfClass("Humanoid"))
      end
      elseif part.Anchored == false and not part.Parent:FindFirstChildOfClass("Humanoid") and not part:IsDescendantOf(owner) then
        part.AssemblyLinearVelocity = (explosion.Position - part.Position).Unit * -350
        if (part.Size.X + part.Size.Y + part.Size.Z) <= 30 and not part:IsA("Accessory") and (part.Position - explosion.Position).Magnitude <= 80 then
          part:BreakJoints()
        end
     end
  end
  
for _, humanoid in pairs(humanoids) do
  if (humanoid.RootPart.Position - explosion.Position).Magnitude <= 130 then
    humanoid:TakeDamage(1200 + (math.random(1, 8) * 100))
    humanoid:ChangeState("FallingDown")
    humanoid.RootPart.AssemblyLinearVelocity = (explosion.Position - humanoid.RootPart.Position).Unit * -1000
  else
    humanoid:TakeDamage(40 + (math.random(1, 6) * 10))
    humanoid.RootPart.AssemblyLinearVelocity = (explosion.Position - humanoid.RootPart.Position).Unit * -200
  end
end
            end
end)
