local player = game.Players.LocalPlayer
local tool = Instance.new("Tool", player:WaitForChild("Backpack"))
tool.Name = "Sign?"
tool.CanBeDropped = false
tool.ToolTip = "The fog is coming " .. string.rep(utf8.char(0x1F923), 2)
tool.GripPos = Vector3.new(1.5, -0.4, 0)

local handle = Instance.new("Part", tool)
handle.Name = "Handle"
handle.Material = "CrackedLava"
handle.Color = Color3.new(0.1, 0.1, 0.1)
handle.Size = Vector3.new(3, 3, 0.25)

local decal = Instance.new("Decal", handle)
decal.Texture = "rbxassetid://496077816"
decal.Face = Enum.NormalId.Front

local particle = Instance.new("ParticleEmitter", handle)
particle.Texture = "https://www.roblox.com/asset-thumbnail/image?assetId=92127531345008&width=432&height=432&format=png"
particle.Shape = "Sphere"
particle.Rate = 20
particle.RotSpeed = NumberRange.new(-360, 360)
particle.Rotation = NumberRange.new(-360, 360)
particle.Size = NumberSequence.new(1.1, 1.1)
particle.Transparency = NumberSequence.new(0, 1)
particle.Lifetime = NumberRange.new(0.3, 0.7)

tool.Equipped:Connect(function()
player.Character.Humanoid:SetStateEnabled("Dead", false)
local Anim = Instance.new("Animation")
Anim.AnimationId = "rbxassetid://223623937"
Anim.Name = "Sign_IdleAnimation"
local k = player.Character.Humanoid:LoadAnimation(Anim)
k:Play()
k:AdjustSpeed(1)

local sound = Instance.new("Sound", handle)
sound.SoundId = "rbxassetid://6665010343"
sound.Volume = 2
sound.PlaybackSpeed = 1
sound.Looped = true
sound:Play()
  tool.Unequipped:Wait()
 sound:Stop() if sound then sound:Destroy() end
end)

tool.Unequipped:Connect(function()
player.Character.Humanoid:SetStateEnabled("Dead", true)
for _, track in ipairs(player.Character.Humanoid:GetPlayingAnimationTracks()) do
      if track.Animation.AnimationId == "rbxassetid://223623937" or track.Animation.Name == "WarHammer_IdleAnimation" then
      track:Stop()
      end
end
end)

local lastPressTime = 0
tool.Activated:Connect(function()
  local currentTime = tick()
            if currentTime - lastPressTime >= 2 then
                lastPressTime = currentTime 
local partTweenn2 = game:GetService("TweenService"):Create(tool, TweenInfo.new(0.2, Enum.EasingStyle.Linear), {
        GripPos = tool.GripPos + Vector3.new(0, 0, 5)
    })
    partTweenn2:Play()
    
local sound = Instance.new("Sound", handle)
sound.SoundId = "rbxassetid://101164100"
sound.Volume = 2
sound.PlaybackSpeed = 1
sound.Looped = false
sound:Play()
game.Debris:AddItem(sound, 8)

local foundHumanoids = {}
local radius = 6
local origin = player.Character.HumanoidRootPart.Position
local direction = player.Character.HumanoidRootPart.CFrame.LookVector

for _, v in pairs(workspace:GetDescendants()) do
    if v:IsA("Humanoid") and v.RootPart and v.RootPart.Parent ~= player.Character then
        local humanoidPosition = v.RootPart.Position
        local toHumanoid = humanoidPosition - origin
        local distance = toHumanoid.magnitude
        local angle = math.acos(toHumanoid.Unit:Dot(direction))

        if distance <= 12 and angle < math.rad(30) then
            table.insert(foundHumanoids, v)
        end
    end
end

for _, humanoid in pairs(foundHumanoids) do
   local frtb = math.random(1, 10)
 if frtb <= 9 then
  humanoid:TakeDamage(35)
  humanoid.RootPart.Velocity = tool.Parent.HumanoidRootPart.CFrame.LookVector * 20
  humanoid.Sit = true
  
local sound = Instance.new("Sound", handle)
sound.SoundId = "rbxassetid://608539282"
sound.Volume = 2
sound.PlaybackSpeed = 1
sound.Looped = false
sound:Play()
game.Debris:AddItem(sound, 8)
  else
humanoid:ChangeState("FallingDown")
humanoid.Sit = true
humanoid:TakeDamage(500)
humanoid.RootPart.Velocity = handle.CFrame.LookVector * 50 + Vector3.new(0, 200, 0)

if game.Players:GetPlayerFromCharacter(humanoid.Parent) then
  local player = game.Players:GetPlayerFromCharacter(humanoid.Parent)
  local gui = Instance.new("ScreenGui", player.PlayerGui)
  gui.Name = "Jumpscare"
  gui.DisplayOrder = -25
  gui.IgnoreGuiInset = true
  gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
  
  local screamer = Instance.new("ImageLabel", gui)
  screamer.Image = decal.Texture
  screamer.Size = UDim2.new(1, 0, 1, 0)
  screamer.BackgroundColor3 = Color3.new(0, 0, 0)
  screamer.BorderSizePixel = 0
  game.Debris:AddItem(screamer, 5)
  
  task.delay(2.5, function()
    game:GetService("TweenService"):Create(screamer, TweenInfo.new(0.75, Enum.EasingStyle.Linear, Enum.EasingDirection.Out, 0, false, 0), {
       ImageTransparency = 1,
       BackgroundTransparency = 1
     }):Play()
  end)
end

local sound = Instance.new("Sound", humanoid.RootPart)
sound.SoundId = "rbxassetid://6186631227"
sound.Volume = 2.5
sound.PlaybackSpeed = 1
sound.Looped = false
sound:Play()
game.Debris:AddItem(sound, 5)
 end
end
 task.wait(0.2)
local partTweenn2 = game:GetService("TweenService"):Create(tool, TweenInfo.new(0.2, Enum.EasingStyle.Linear), {
        GripPos = Vector3.new(1.5, -0.4, 0)
    })
    partTweenn2:Play()
            end
end)

task.spawn(function()
  repeat
    local images = {13657291790, 15982956984, 7120948745, 72388060367139, 102361985338550, 18288063494}
    decal.Texture = "https://www.roblox.com/asset-thumbnail/image?assetId=".. tostring(images[math.random(1, #images)]) .. "&width=432&height=432&format=png"
  task.wait(20) until handle.Parent ~= tool
end)
