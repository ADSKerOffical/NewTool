local tool = Instance.new("Tool", game.Players.LocalPlayer.Backpack)
tool.Name = "Dular-850"
tool.Grip = CFrame.Angles(0, math.rad(20), 0)
tool.GripPos = Vector3.new(0.25, -0.3, 0.5)

local handle = Instance.new("Part", tool)
handle.Name = "Handle"

local mesh = Instance.new("SpecialMesh", handle)
mesh.MeshId = "rbxassetid://443685014"
mesh.TextureId = "rbxassetid://443685020"
mesh.Scale = Vector3.new(1.75, 1.75, 1.75)

local shootpos = Instance.new("Part", handle)
shootpos.Size = Vector3.new(1, 1, 1)
shootpos.CanCollide = false
shootpos.CanTouch = false
shootpos.Transparency = 1

local fastening = Instance.new("Weld", shootpos)
fastening.Part0 = shootpos
fastening.Part1 = handle
fastening.C0 = CFrame.new(0, 0, 1.5)

local lastPressTime = 0
tool.Activated:Connect(function()
local currentTime = tick()
  if currentTime - lastPressTime >= 0.75 then
    lastPressTime = currentTime
     local mousepos = game.Players.LocalPlayer:GetMouse().Hit.LookVector
      for i = 1, 2 do task.wait(0.05)
        local ball = Instance.new("Part", Workspace)
        ball.Color = Color3.new(0, 0.9, 0.9)
        ball.Transparency = 0.05
        ball.Material = "Neon"
        ball.Shape = "Ball"
        ball.CanCollide = false
        ball.Position = shootpos.Position
        ball.CFrame = CFrame.new(ball.Position, mousepos)
        ball.Size = Vector3.new(1.5, 1.5, 1.5)
        game.Debris:AddItem(ball, 10)
        
        local sound = Instance.new("Sound", handle)
        sound.SoundId = "rbxassetid://1624609598"
        sound.Volume = 1
        sound.PlaybackSpeed = 1
        sound:Play()
        game.Debris:AddItem(sound, 10)
        
        local flash = Instance.new("PointLight", handle)
        flash.Range = 10
        flash.Brightness = 2
        flash.Color = Color3.new(0, 1, 1)
        game.Debris:AddItem(flash, 0.2)
        
        local bv = Instance.new("BodyVelocity", ball)
        bv.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
        bv.Velocity = mousepos * 400
        
        ball.Touched:Connect(function(part)
          if not part:IsDescendantOf(game.Players.LocalPlayer.Character) then
            if part.Parent:FindFirstChildOfClass("Humanoid") then
             local humanoid = part.Parent:FindFirstChildOfClass("Humanoid")
             humanoid:TakeDamage(20)
             humanoid.RootPart.Velocity = mousepos * 100
             ball:Destroy()
              else
             ball:Destroy()
            end
          end
        end)
        
      end 
    end
end)

tool.Equipped:Connect(function()
  local Anim = Instance.new("Animation")
  Anim.AnimationId = "rbxassetid://182631367"
  Anim.Name = "HoldAnim"
  local k = game:GetService("Players").LocalPlayer.Character.Humanoid:LoadAnimation(Anim)
  k:Play()
  k:AdjustSpeed(1)
  tool.Unequipped:Wait()
  k:Stop()
  Anim:Destroy()
end)
