local player = player or game.Players.LocalPlayer
local tool = Instance.new("Tool", player:WaitForChild("Backpack"))
tool.Name = "Energy coil"
tool.GripPos = Vector3.new(0, 0, -0.3)

local handle = Instance.new("Part", tool)
handle.Name = "Handle"
handle.Size = Vector3.zero
handle.BrickColor = BrickColor.new(Color3.new(1, 1, 0))
handle.Material = "Neon"

local mesh = Instance.new("SpecialMesh", handle)
mesh.MeshId = "rbxassetid://16606212"
mesh.Scale = Vector3.new(0.7, 0.7, 0.7)

local particle = Instance.new("ParticleEmitter", handle)
particle.Texture = "https://www.roblox.com/asset-thumbnail/image?assetId=569507524&width=432&height=432&format=png"
particle.Rate = 35
particle.Lifetime = NumberRange.new(0.5, 2)
particle.Size = NumberSequence.new(1.35, 0)
particle.Speed = NumberRange.new(1, 1.5)
particle.RotSpeed = NumberRange.new(-360, 360)
particle.Color = ColorSequence.new(Color3.new(1, 1, 0), Color3.new(1, 1, 0))
particle.Transparency = NumberSequence.new(0, 0.25, 1)
particle.SpreadAngle = Vector2.new(-360, 360)
particle.Shape = "Sphere"

tool.Equipped:Connect(function()
 local owner = tool.Parent
local sound = Instance.new("Sound", handle)
sound.SoundId = "rbxassetid://99173388"
sound.Volume = 2
sound.PlaybackSpeed = 1
sound.Looped = false
sound:Play()
game.Debris:AddItem(sound, 4)

local as = owner.Humanoid:GetPropertyChangedSignal("MoveDirection"):Connect(function()
  if owner.HumanoidRootPart.Velocity.Magnitude >= 100 then
    local humanoids = {}
for _, part in next, workspace:GetPartBoundsInRadius(handle.Position, 10) do
    if part.Parent:IsA("Model") and part.Parent:FindFirstChildOfClass("Humanoid") and not part:IsDescendantOf(owner) then
      if not table.find(humanoids, part.Parent:FindFirstChildOfClass("Humanoid")) then
        table.insert(humanoids, part.Parent:FindFirstChildOfClass("Humanoid"))
      end
    end
  end

    for _, humanoid in next, humanoids do
     humanoid:TakeDamage(10)
     humanoid.RootPart.AssemblyLinearVelocity = (humanoid.RootPart.Position - handle.Position).Unit * 150
    end
  end
end)

 owner.Humanoid.JumpPower = 100
 owner.Humanoid.WalkSpeed = 115
   tool.Unequipped:Wait()
 owner.Humanoid.JumpPower = 50
 owner.Humanoid.WalkSpeed = 16
 as:Disconnect()
end)
