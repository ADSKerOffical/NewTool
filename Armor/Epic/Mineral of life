local player = player or game.Players.LocalPlayer
local tool = Instance.new("Tool", player:WaitForChild("Backpack"))
tool.Name = "Mineral of life"

local handle = Instance.new("Part", tool)
handle.Name = "Handle"
handle.Size = Vector3.zero
handle.BrickColor = BrickColor.new(Color3.new(0, 0.8, 0))
handle.Material = "SmoothPlastic"

local mesh = Instance.new("SpecialMesh", handle)
mesh.MeshId = "rbxassetid://11176581314"
mesh.Scale = Vector3.new(1.4, 1.4, 1.4)

tool.Activated:Connect(function()
  local owner = tool.Parent
  local part = handle:Clone()
  part.Anchored = true
  part.Parent = owner.HumanoidRootPart
  
  owner.Humanoid.MaxHealth += 100
  owner.Humanoid.Health += 100
  tool:Destroy()
  
  coroutine.wrap(function()
    repeat task.wait()
      part.CFrame = part.CFrame:lerp(owner.HumanoidRootPart.CFrame * CFrame.new(0, 0, 5), 0.1)
    until not part or not part.Parent
  end)()
  
  coroutine.wrap(function()
    repeat task.wait(5)
      repeat task.wait() until owner.Humanoid.Health ~= owner.Humanoid.MaxHealth 
        owner.Humanoid.Health += owner.Humanoid.MaxHealth / 6.6
        
        local light = Instance.new("PointLight", part)
        light.Range = 10
        light.Brightness = 1.5
        light.Color = Color3.new(0, 1, 0)
        game.Debris:AddItem(light, 4)
        
        local particle = Instance.new("ParticleEmitter", owner.HumanoidRootPart)
        particle.Enabled = false
        particle.Texture = "https://www.roblox.com/asset-thumbnail/image?assetId=14327341766&width=432&height=432&format=png"
        particle.Speed = NumberRange.new(3, 3)
        particle.Size = NumberSequence.new(1, 1)
        particle.Color = ColorSequence.new(Color3.new(0, 0.8, 0), Color3.new(0, 0.8, 0))
        particle.Transparency = NumberSequence.new(0, 1)
        particle.Lifetime = NumberRange.new(1, 1)
        particle.SpreadAngle = Vector2.new(-360, 360)
        particle.Shape = "Sphere"
        particle:Emit(50)
        game.Debris:AddItem(particle, 10)
        
        task.delay(1, function()
           local partTweenn2 = game:GetService("TweenService"):Create(light, TweenInfo.new(1, Enum.EasingStyle.Sine), {
                 Range = 0
              })
           partTweenn2:Play()
         end)
         
        local sound = Instance.new("Sound", part)
        sound.SoundId = "rbxassetid://3473563090"
        sound.Volume = 1
        sound.PlaybackSpeed = 1
        sound:Play()
        game.Debris:AddItem(sound, 8)
    until not part or not part.Parent
  end)()
  
  part.Destroying:Connect(function()
    owner.Humanoid.MaxHealth -= 100
  end)
  
  local info = Instance.new("Folder", part)
  info.Name = "HatInfo"
 
  local info_Owner = Instance.new("ObjectValue", info)
  info_Owner.Name = "Owner"
  info_Owner.Value = game.Players:GetPlayerFromCharacter(owner)
 
  local info_Rarity = Instance.new("StringValue", info)
  info_Rarity.Name = "Rarity"
  info_Rarity.Value = "Epic"
 
  local info_Name = Instance.new("StringValue", info)
  info_Name.Name = "Name"
  info_Name.Value = "Mineral of life" 
 
  local info_Group = Instance.new("StringValue", info)
  info_Group.Name = "Group"
  info_Group.Value = "Nature" 
end)
